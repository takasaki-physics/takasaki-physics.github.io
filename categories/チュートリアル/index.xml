width="1366"
height="720"
srcset="https://takasaki-physics.github.io/p/how-to-post/1_hu_f5e0f51fbbae155b.png 480w, https://takasaki-physics.github.io/p/how-to-post/1_hu_ef88078e5d26a989.png 1024w"
loading="lazy"
alt="Image 1"
